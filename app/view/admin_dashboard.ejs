<%- include('partials/header') %>
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">Admin Control Panel</h2>
        <div class="badge bg-primary p-2 fs-6">Total Reservasi: <%= total %></div>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 p-4">
                <h5 class="fw-bold mb-3">Tambah Psikolog</h5>
                <form action="/admin/psikolog/add" method="POST">
                    <input type="hidden" name="adminId" value="<%= adminId %>">
                    <input type="text" name="nama" class="form-control mb-2" placeholder="Nama Psikolog" required>
                    <div class="row g-2 mb-2">
                        <div class="col-6"><select name="hari_mulai" class="form-select"><option value="Senin">Senin</option><option value="Selasa">Selasa</option><option value="Rabu">Rabu</option><option value="Kamis">Kamis</option><option value="Jumat">Jumat</option></select></div>
                        <div class="col-6"><select name="hari_sampai" class="form-select"><option value="Rabu">Rabu</option><option value="Kamis">Kamis</option><option value="Jumat">Jumat</option><option value="Sabtu">Sabtu</option></select></div>
                    </div>
                    <div class="row g-2 mb-2">
                        <div class="col-6"><input type="time" name="jam_mulai" class="form-control" required></div>
                        <div class="col-6"><input type="time" name="jam_selesai" class="form-control" required></div>
                    </div>
                    <input type="text" name="username" class="form-control mb-2" placeholder="Username" required>
                    <input type="password" name="password" class="form-control mb-3" placeholder="Password" required>
                    <button type="submit" class="btn btn-primary w-100">Daftarkan</button>
                </form>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm border-0 p-4">
                <h5 class="fw-bold mb-3">Tambah Mahasiswa</h5>
                <form action="/admin/mahasiswa/add" method="POST">
                    <input type="hidden" name="adminId" value="<%= adminId %>">
                    <input type="text" name="username" class="form-control mb-2" placeholder="NIM" required>
                    <input type="password" name="password" class="form-control mb-3" placeholder="Password" required>
                    <button type="submit" class="btn btn-success w-100">Daftarkan</button>
                </form>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mt-5 p-4">
        <h5 class="fw-bold mb-3">Manajemen Akun Psikolog</h5>
        <table class="table align-middle">
            <thead><tr><th>Nama</th><th>Jadwal</th><th>Username/Password</th><th>Aksi</th></tr></thead>
            <tbody>
                <% psikolog.forEach(p => { %>
                <tr>
                    <td><%= p.nama_psikolog %></td>
                    <td><span class="badge bg-info text-dark"><%= p.jadwal_tugas %></span></td>
                    <td><small>U: <%= p.username %> / P: <%= p.password %></small></td>
                    <td>
                        <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editUser<%= p.id %>">Edit</button>
                        <a href="/admin/user/delete/<%= p.id %>/<%= adminId %>" class="btn btn-sm btn-danger" onclick="return confirm('Hapus?')">Hapus</a>
                    </td>
                </tr>
                <div class="modal fade" id="editUser<%= p.id %>" tabindex="-1">
                    <div class="modal-dialog">
                        <form action="/admin/user/update" method="POST" class="modal-content">
                            <div class="modal-header"><h5>Edit Akun</h5></div>
                            <div class="modal-body">
                                <input type="hidden" name="userId" value="<%= p.id %>"><input type="hidden" name="adminId" value="<%= adminId %>"><input type="hidden" name="role" value="psikolog">
                                <input type="text" name="nama" value="<%= p.nama_psikolog %>" class="form-control mb-2">
                                <input type="text" name="jadwal" value="<%= p.jadwal_tugas %>" class="form-control mb-2">
                                <input type="text" name="username" value="<%= p.username %>" class="form-control mb-2">
                                <input type="text" name="password" value="<%= p.password %>" class="form-control">
                            </div>
                            <div class="modal-footer"><button type="submit" class="btn btn-primary">Update</button></div>
                        </form>
                    </div>
                </div>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>
<%- include('partials/footer') %>