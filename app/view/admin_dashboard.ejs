<%- include('partials/header') %>
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">Admin Control Panel</h2>
        <div class="badge bg-primary p-2 fs-6">Total Reservasi: <%= total %></div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 p-4 h-100">
                <h5 class="fw-bold mb-3 text-secondary">Tambah Psikolog</h5>
                <form action="/admin/psikolog/add" method="POST">
                    <input type="hidden" name="adminId" value="<%= adminId %>">
                    <input type="text" name="nama" class="form-control mb-2" placeholder="Nama Lengkap" required>
                    <div class="row g-2 mb-2">
                        <div class="col-6">
                            <select name="hari_mulai" class="form-select"><option value="Senin">Senin</option><option value="Selasa">Selasa</option><option value="Rabu">Rabu</option><option value="Kamis">Kamis</option><option value="Jumat">Jumat</option></select>
                        </div>
                        <div class="col-6">
                            <select name="hari_sampai" class="form-select"><option value="Rabu">Rabu</option><option value="Kamis">Kamis</option><option value="Jumat">Jumat</option><option value="Sabtu">Sabtu</option></select>
                        </div>
                    </div>
                    <div class="row g-2 mb-2">
                        <div class="col-6"><input type="time" name="jam_mulai" class="form-control" required></div>
                        <div class="col-6"><input type="time" name="jam_selesai" class="form-control" required></div>
                    </div>
                    <input type="text" name="username" class="form-control mb-2" placeholder="Username" required>
                    <input type="password" name="password" class="form-control mb-3" placeholder="Password" required>
                    <button type="submit" class="btn btn-primary w-100 fw-bold">Daftarkan Psikolog</button>
                </form>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm border-0 p-4 h-100">
                <h5 class="fw-bold mb-3 text-success">Tambah Mahasiswa</h5>
                <form action="/admin/mahasiswa/add" method="POST">
                    <input type="hidden" name="adminId" value="<%= adminId %>">
                    <div class="mb-2">
                        <label class="small fw-bold text-muted">NIM (Username)</label>
                        <input type="text" name="username" class="form-control" placeholder="Contoh: 20210140001" required>
                    </div>
                    <div class="mb-3">
                        <label class="small fw-bold text-muted">Password</label>
                        <input type="password" name="password" class="form-control" placeholder="Masukkan Password" required>
                    </div>
                    <button type="submit" class="btn btn-success w-100 fw-bold">Daftarkan Mahasiswa</button>
                </form>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-5">
        <div class="card-header bg-white py-3 fw-bold text-primary">Manajemen Akun Psikolog</div>
        <div class="table-responsive">
            <table class="table align-middle px-3">
                <thead class="table-light">
                    <tr><th>Nama</th><th>Jadwal</th><th>Login Info</th><th class="text-center">Aksi</th></tr>
                </thead>
                <tbody>
                    <% psikolog.forEach(p => { %>
                    <tr>
                        <td class="fw-bold"><%= p.nama_psikolog %></td>
                        <td><span class="badge bg-info text-dark"><%= p.jadwal_tugas %></span></td>
                        <td><small>U: <%= p.username %><br>P: <%= p.password %></small></td>
                        <td class="text-center">
                            <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editPsi<%= p.id %>">Edit</button>
                            <a href="/admin/user/delete/<%= p.id %>/<%= adminId %>" class="btn btn-sm btn-danger" onclick="return confirm('Hapus?')">Hapus</a>
                        </td>
                    </tr>
                    <div class="modal fade" id="editPsi<%= p.id %>" tabindex="-1">
                        <div class="modal-dialog">
                            <form action="/admin/user/update" method="POST" class="modal-content">
                                <div class="modal-header fw-bold">Update Akun Psikolog</div>
                                <div class="modal-body">
                                    <input type="hidden" name="userId" value="<%= p.id %>"><input type="hidden" name="adminId" value="<%= adminId %>"><input type="hidden" name="role" value="psikolog">
                                    <label class="small fw-bold">Nama</label><input type="text" name="nama" value="<%= p.nama_psikolog %>" class="form-control mb-2">
                                    <label class="small fw-bold">Jadwal</label><input type="text" name="jadwal" value="<%= p.jadwal_tugas %>" class="form-control mb-2">
                                    <label class="small fw-bold">Username</label><input type="text" name="username" value="<%= p.username %>" class="form-control mb-2">
                                    <label class="small fw-bold">Password</label><input type="password" name="password" value="<%= p.password %>" class="form-control">
                                </div>
                                <div class="modal-footer"><button type="submit" class="btn btn-primary">Update</button></div>
                            </form>
                        </div>
                    </div>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 fw-bold text-success">Manajemen Akun Mahasiswa</div>
        <div class="table-responsive">
            <table class="table align-middle px-3">
                <thead class="table-light">
                    <tr><th>NIM (Username)</th><th>Password</th><th class="text-center">Aksi</th></tr>
                </thead>
                <tbody>
                    <% mahasiswa.forEach(m => { %>
                    <tr>
                        <td class="fw-bold"><%= m.username %></td>
                        <td><%= m.password %></td>
                        <td class="text-center">
                            <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editMhs<%= m.id %>">Edit</button>
                            <a href="/admin/user/delete/<%= m.id %>/<%= adminId %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('Hapus mahasiswa?')">Hapus</a>
                        </td>
                    </tr>
                    <div class="modal fade" id="editMhs<%= m.id %>" tabindex="-1">
                        <div class="modal-dialog">
                            <form action="/admin/user/update" method="POST" class="modal-content">
                                <div class="modal-header fw-bold">Update Akun Mahasiswa</div>
                                <div class="modal-body">
                                    <input type="hidden" name="userId" value="<%= m.id %>"><input type="hidden" name="adminId" value="<%= adminId %>"><input type="hidden" name="role" value="mahasiswa">
                                    <label class="small fw-bold">NIM (Username)</label><input type="text" name="username" value="<%= m.username %>" class="form-control mb-2">
                                    <label class="small fw-bold">Password Baru</label><input type="password" name="password" value="<%= m.password %>" class="form-control">
                                </div>
                                <div class="modal-footer"><button type="submit" class="btn btn-success">Update Data</button></div>
                            </form>
                        </div>
                    </div>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('partials/footer') %>