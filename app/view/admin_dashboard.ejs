<%- include('partials/header') %>
<div class="container">
    <h2 class="fw-bold text-primary mb-4">Admin Control</h2>
    <div class="row mb-5">
        <div class="col-md-6">
            <div class="card p-4 shadow-sm h-100">
                <h5 class="fw-bold">Tambah Psikolog</h5>
                <form action="/admin/psikolog/add" method="POST">
                    <input type="text" name="nama" class="form-control mb-2" placeholder="Nama" required>
                    <div class="row g-2 mb-2">
                        <div class="col-6"><select name="hari_mulai" class="form-select"><option>Senin</option><option>Selasa</option><option>Rabu</option><option>Kamis</option><option>Jumat</option></select></div>
                        <div class="col-6"><select name="hari_sampai" class="form-select"><option>Senin</option><option>Selasa</option><option>Rabu</option><option>Kamis</option><option>Jumat</option></select></div>
                    </div>
                    <div class="row g-2 mb-2">
                        <div class="col-6"><input type="time" name="jam_mulai" class="form-control" required></div>
                        <div class="col-6"><input type="time" name="jam_selesai" class="form-control" required></div>
                    </div>
                    <input type="text" name="username" class="form-control mb-2" placeholder="User" required>
                    <input type="password" name="password" class="form-control mb-3" placeholder="Pass" required>
                    <button type="submit" class="btn btn-primary w-100">Simpan</button>
                </form>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card p-4 shadow-sm h-100">
                <h5 class="fw-bold">Tambah Mahasiswa</h5>
                <form action="/admin/mahasiswa/add" method="POST">
                    <input type="text" name="username" class="form-control mb-2" placeholder="User (NIM)" required>
                    <input type="password" name="password" class="form-control mb-3" placeholder="Pass" required>
                    <button type="submit" class="btn btn-success w-100">Simpan</button>
                </form>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white fw-bold">Data Psikolog</div>
        <table class="table">
            <thead><tr><th>Nama</th><th>Jadwal</th><th>Username</th><th>Aksi</th></tr></thead>
            <tbody>
                <% psikolog.forEach(p => { %>
                    <tr>
                        <td><%= p.nama_psikolog %></td>
                        <td><%= p.jadwal_tugas %></td>
                        <td><%= p.username %></td>
                        <td>
                            <a href="/admin/user/delete/<%= p.id %>/<%= adminId %>" class="btn btn-sm btn-danger">Hapus</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>
<%- include('partials/footer') %>