<%- include('partials/header') %>
<div class="row">
    <div class="col-md-4">
        <div class="card shadow-sm border-0 mb-4 p-4">
            <h5 class="fw-bold text-primary mb-3">Form Reservasi</h5>
            <form action="/reservasi/add" method="POST">
                <input type="hidden" name="mhsId" value="<%= mhsId %>">
                <div class="mb-2">
                    <label class="small fw-bold">Pilih Psikolog</label>
                    <select name="psikologId" class="form-select" required>
                        <% psikolog.forEach(p => { %>
                            <option value="<%= p.id %>"><%= p.nama_psikolog %> (<%= p.jadwal_tugas %>)</option>
                        <% }) %>
                    </select>
                </div>
                <div class="mb-2"><label class="small fw-bold">NIM</label><input type="text" name="nim" class="form-control" required></div>
                <div class="mb-2"><label class="small fw-bold">Nama</label><input type="text" name="nama" class="form-control" required></div>
                <div class="row g-2 mb-3">
                    <div class="col-6"><label class="small fw-bold">Tanggal</label><input type="date" name="tanggal" class="form-control" required></div>
                    <div class="col-6"><label class="small fw-bold">Jam</label><input type="time" name="waktu" class="form-control" required></div>
                </div>
                <button type="submit" class="btn btn-primary w-100 fw-bold">Kirim Pengajuan</button>
            </form>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card shadow-sm border-0 p-4">
            <h5 class="fw-bold text-primary mb-3">Status Reservasi</h5>
            <div class="table-responsive">
                <table class="table">
                    <thead><tr><th>Psikolog</th><th>Status</th><th>Aksi</th></tr></thead>
                    <tbody>
                        <% reservasi.forEach(r => { %>
                            <tr class="<%= r.status === 'ditolak' ? 'table-danger' : '' %>">
                                <td><%= r.tanggal.toLocaleDateString('id-ID') %> - <%= r.waktu %></td>
                                <td>
                                    <% if(r.status === 'ditolak') { %>
                                        <div class="text-danger fw-bold">DITOLAK</div>
                                        <div class="small">Alasan: <%= r.pesan_tolak %></div>
                                    <% } else { %>
                                        <span class="badge <%= r.status=='menunggu'?'bg-warning':'bg-success'%>"><%= r.status %></span>
                                    <% } %>
                                </td>
                                <td>
                                    <a href="/reservasi/delete/<%= r.id %>/<%= mhsId %>" class="btn btn-sm btn-danger">Hapus</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer') %>