<%- include('partials/header') %>
<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="card p-4 shadow-sm border-0">
                <h5 class="fw-bold text-primary mb-3">Daftar Reservasi Saya</h5>
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Psikolog & Jadwal</th>
                            <th>Status</th>
                            <th>Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% reservasi.forEach(r => { %>
                        <tr>
                            <td>
                                <strong>ID Psikolog: <%= r.psikolog_id %></strong><br>
                                <small><%= r.tanggal.toLocaleDateString('id-ID') %> | <%= r.waktu %></small>
                            </td>
                            <td>
                                <span class="badge <%= r.status=='menunggu'?'bg-warning':(r.status=='ditolak'?'bg-danger':'bg-success') %>">
                                    <%= r.status.toUpperCase() %>
                                </span>
                                <% if(r.status == 'ditolak') { %> <br><small>Sebab: <%= r.pesan_tolak %></small> <% } %>
                            </td>
                            <td>
                                <% if(r.status != 'dikonfirmasi') { %>
                                    <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#modalEdit<%= r.id %>">Edit</button>
                                <% } %>
                            </td>
                        </tr>

                        <div class="modal fade" id="modalEdit<%= r.id %>" tabindex="-1">
                            <div class="modal-dialog">
                                <form action="/reservasi/update" method="POST" class="modal-content">
                                    <div class="modal-header"><h5>Ubah Jadwal</h5></div>
                                    <div class="modal-body">
                                        <input type="hidden" name="resId" value="<%= r.id %>">
                                        <input type="hidden" name="mhsId" value="<%= mhsId %>">
                                        
                                        <label class="small fw-bold">Pilih Psikolog</label>
                                        <select name="psikologId" class="form-select mb-2" required>
                                            <% psikolog.forEach(p => { %>
                                                <option value="<%= p.id %>" <%= r.psikolog_id == p.id ? 'selected' : '' %>>
                                                    <%= p.nama_psikolog %>
                                                </option>
                                            <% }) %>
                                        </select>

                                        <label class="small fw-bold">Tanggal</label>
                                        <input type="date" name="tanggal" class="form-control mb-2" 
                                               value="<%= r.tanggal.toISOString().split('T')[0] %>" required>

                                        <label class="small fw-bold">Jam</label>
                                        <input type="time" name="waktu" class="form-control mb-2" 
                                               value="<%= r.waktu %>" required>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-primary">Simpan Perubahan</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer') %>