<%- include('partials/header') %>
<div class="container py-4">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 p-4">
                <h5 class="fw-bold text-primary mb-3">Buat Janji Temu</h5>
                <form action="/reservasi/add" method="POST">
                    <input type="hidden" name="mhsId" value="<%= mhsId %>">
                    <div class="mb-2">
                        <label class="small fw-bold">Psikolog</label>
                        <select name="psikologId" class="form-select" required>
                            <% psikolog.forEach(p => { %>
                                <option value="<%= p.id %>"><%= p.nama_psikolog %> (<%= p.jadwal_tugas %>)</option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="mb-2"><input type="text" name="nim" class="form-control" placeholder="NIM" required></div>
                    <div class="mb-2"><input type="text" name="nama" class="form-control" placeholder="Nama Lengkap" required></div>
                    <div class="row g-2 mb-3">
                        <div class="col-6"><input type="date" name="tanggal" class="form-control" required></div>
                        <div class="col-6"><input type="time" name="waktu" class="form-control" required></div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 fw-bold">Kirim Pengajuan</button>
                </form>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm border-0 p-4">
                <h5 class="fw-bold mb-3">Riwayat Konseling</h5>
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Jadwal</th>
                                <th>Status</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% reservasi.forEach(r => { %>
                            <tr>
                                <td><strong><%= r.tanggal.toLocaleDateString('id-ID') %></strong><br><small><%= r.waktu %></small></td>
                                <td>
                                    <span class="badge <%= r.status=='menunggu'?'bg-warning text-dark':(r.status=='ditolak'?'bg-danger':'bg-success') %>">
                                        <%= r.status %>
                                    </span>
                                </td>
                                <td>
                                    <% if(r.status != 'dikonfirmasi') { %>
                                        <button class="btn btn-sm btn-outline-warning" data-bs-toggle="modal" data-bs-target="#edit<%= r.id %>">Edit</button>
                                    <% } %>
                                    <a href="/reservasi/delete/<%= r.id %>/<%= mhsId %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('Hapus?')">Hapus</a>
                                </td>
                            </tr>
                            <div class="modal fade" id="edit<%= r.id %>" tabindex="-1">
                                <div class="modal-dialog">
                                    <form action="/reservasi/update" method="POST" class="modal-content">
                                        <div class="modal-header"><h5>Ubah Jadwal</h5></div>
                                        <div class="modal-body">
                                            <input type="hidden" name="resId" value="<%= r.id %>">
                                            <input type="hidden" name="mhsId" value="<%= mhsId %>">
                                            <select name="psikologId" class="form-select mb-2">
                                                <% psikolog.forEach(p => { %>
                                                    <option value="<%= p.id %>" <%= r.psikolog_id==p.id?'selected':'' %>><%= p.nama_psikolog %></option>
                                                <% }) %>
                                            </select>
                                            <input type="date" name="tanggal" class="form-control mb-2" value="<%= r.tanggal.toISOString().split('T')[0] %>">
                                            <input type="time" name="waktu" class="form-control" value="<%= r.waktu %>">
                                        </div>
                                        <div class="modal-footer"><button type="submit" class="btn btn-primary">Simpan</button></div>
                                    </form>
                                </div>
                            </div>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer') %>