<%- include('partials/header') %>
<div class="container py-4">
    <h3 class="fw-bold text-primary mb-4">Dashboard Psikolog</h3>
    <div class="card border-0 shadow-sm p-4">
        <table class="table align-middle">
            <thead><tr><th>Mahasiswa</th><th>Jadwal</th><th>Status</th><th>Aksi</th></tr></thead>
            <tbody>
                <% daftar.forEach(r => { %>
                    <tr>
                        <td><%= r.nama_mhs %> (<%= r.nim %>)</td>
                        <td><%= r.tanggal.toLocaleDateString('id-ID') %> <br> <%= r.waktu %></td>
                        <td><span class="badge bg-secondary"><%= r.status %></span></td>
                        <td>
                            <% if(r.status === 'menunggu') { %>
                                <div class="d-flex gap-2">
                                    <form action="/psikolog/update-status" method="POST">
                                        <input type="hidden" name="resId" value="<%= r.id %>"><input type="hidden" name="psiId" value="<%= psiId %>">
                                        <button type="submit" name="status" value="dikonfirmasi" class="btn btn-sm btn-success">Terima</button>
                                    </form>
                                    <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#tolak<%= r.id %>">Tolak</button>
                                </div>
                                <div class="modal fade" id="tolak<%= r.id %>" tabindex="-1">
                                    <div class="modal-dialog">
                                        <form action="/psikolog/update-status" method="POST" class="modal-content">
                                            <div class="modal-header"><h5>Alasan Penolakan</h5></div>
                                            <div class="modal-body">
                                                <input type="hidden" name="resId" value="<%= r.id %>"><input type="hidden" name="psiId" value="<%= psiId %>"><input type="hidden" name="status" value="ditolak">
                                                <textarea name="pesan_tolak" class="form-control" placeholder="Tulis alasan..." required></textarea>
                                            </div>
                                            <div class="modal-footer"><button type="submit" class="btn btn-danger">Kirim</button></div>
                                        </form>
                                    </div>
                                </div>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>
<%- include('partials/footer') %>