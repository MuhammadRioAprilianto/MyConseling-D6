<%- include('partials/header') %>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-primary">Daftar Pengajuan Konseling</h3>
        <span class="badge bg-info p-2">Psikolog ID: <%= psiId %></span>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Mahasiswa</th>
                            <th>NIM</th>
                            <th>Jadwal</th>
                            <th>Status saat ini</th>
                            <th>Aksi Konfirmasi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(daftar.length > 0) { %>
                            <% daftar.forEach(r => { %>
                                <tr>
                                    <td><strong><%= r.nama_mhs %></strong></td>
                                    <td><%= r.nim %></td>
                                    <td>
                                        <div class="small fw-bold"><%= r.tanggal.toLocaleDateString('id-ID') %></div>
                                        <div class="text-muted small"><%= r.waktu %></div>
                                    </td>
                                    <td>
                                        <span class="badge rounded-pill <%= r.status === 'menunggu' ? 'bg-warning text-dark' : 'bg-success' %>">
                                            <%= r.status %>
                                        </span>
                                    </td>
                                    <td>
                                        <% if(r.status === 'menunggu') { %>
                                            <form action="/psikolog/update-status" method="POST" class="d-inline">
                                                <input type="hidden" name="resId" value="<%= r.id %>">
                                                <input type="hidden" name="psiId" value="<%= psiId %>">
                                                
                                                <button type="submit" name="status" value="dikonfirmasi" class="btn btn-sm btn-success me-1">Terima</button>
                                                <button type="submit" name="status" value="ditolak" class="btn btn-sm btn-danger" onclick="return confirm('Tolak dan hapus pengajuan ini?')">Tolak</button>
                                            </form>
                                        <% } else { %>
                                            <button class="btn btn-sm btn-secondary" disabled>Selesai</button>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">Belum ada pengajuan masuk untuk Anda.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>