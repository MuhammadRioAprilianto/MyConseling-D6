<%- include('partials/header') %>
<div class="container py-4 text-center">
    <h3 class="fw-bold text-primary mb-4">Portal Psikolog</h3>
    <div class="card shadow-sm border-0 p-4 mx-auto" style="max-width: 900px;">
        <h5 class="fw-bold mb-3 text-start">Daftar Reservasi Masuk</h5>
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Mahasiswa</th>
                    <th>Jadwal</th>
                    <th>Status</th>
                    <th>Konfirmasi</th>
                </tr>
            </thead>
            <tbody>
                <% daftar.forEach(r => { %>
                <tr>
                    <td class="text-start"><strong><%= r.nama_mhs %></strong><br><small><%= r.nim %></small></td>
                    <td><%= r.tanggal.toLocaleDateString('id-ID') %><br><strong><%= r.waktu %></strong></td>
                    <td><span class="badge <%= r.status=='menunggu'?'bg-warning text-dark':'bg-success' %>"><%= r.status %></span></td>
                    <td>
                        <% if(r.status == 'menunggu') { %>
                        <div class="d-flex gap-2 justify-content-center">
                            <form action="/psikolog/update-status" method="POST">
                                <input type="hidden" name="resId" value="<%= r.id %>">
                                <input type="hidden" name="psiId" value="<%= psiId %>">
                                <input type="hidden" name="status" value="dikonfirmasi">
                                <button type="submit" class="btn btn-sm btn-success">Terima</button>
                            </form>
                            <form action="/psikolog/update-status" method="POST">
                                <input type="hidden" name="resId" value="<%= r.id %>">
                                <input type="hidden" name="psiId" value="<%= psiId %>">
                                <input type="hidden" name="status" value="ditolak">
                                <button type="submit" class="btn btn-sm btn-danger">Tolak</button>
                            </form>
                        </div>
                        <% } else { %>
                            <span class="text-muted small">Selesai</span>
                        <% } %>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>
<%- include('partials/footer') %>