<%- include('partials/header') %>
<div class="container py-4">
    <h3 class="fw-bold text-primary mb-4">Portal Psikolog</h3>
    
    <div class="card shadow-sm border-0 p-4">
        <h5 class="fw-bold mb-3">Daftar Janji Temu Masuk</h5>
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Nama Mahasiswa (NIM)</th>
                        <th>Jadwal Konsultasi</th>
                        <th>Status</th>
                        <th class="text-center">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(daftar.length > 0) { %>
                        <% daftar.forEach(r => { %>
                            <tr>
                                <td>
                                    <div class="fw-bold"><%= r.nama_mhs %></div>
                                    <div class="small text-muted"><%= r.nim %></div>
                                </td>
                                <td>
                                    <div><%= r.tanggal.toLocaleDateString('id-ID') %></div>
                                    <div class="small fw-bold"><%= r.waktu %></div>
                                </td>
                                <td>
                                    <span class="badge <%= r.status == 'menunggu' ? 'bg-warning text-dark' : 'bg-success' %>">
                                        <%= r.status %>
                                    </span>
                                </td>
                                <td class="text-center">
                                    <% if(r.status == 'menunggu') { %>
                                        <div class="d-flex justify-content-center gap-2">
                                            <form action="/psikolog/update-status" method="POST">
                                                <input type="hidden" name="resId" value="<%= r.id %>">
                                                <input type="hidden" name="psiId" value="<%= psiId %>">
                                                <input type="hidden" name="status" value="dikonfirmasi">
                                                <button type="submit" class="btn btn-sm btn-success">Konfirmasi</button>
                                            </form>
                                            <form action="/psikolog/update-status" method="POST">
                                                <input type="hidden" name="resId" value="<%= r.id %>">
                                                <input type="hidden" name="psiId" value="<%= psiId %>">
                                                <input type="hidden" name="status" value="ditolak">
                                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Tolak dan hapus reservasi ini?')">Tolak</button>
                                            </form>
                                        </div>
                                    <% } else { %>
                                        <button class="btn btn-sm btn-light disabled">Selesai</button>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted">Belum ada permintaan konsultasi.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('partials/footer') %>